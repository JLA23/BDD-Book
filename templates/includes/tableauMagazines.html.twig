<div id="tableBook">
    <!-- Options de tri -->
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
        <div class="text-muted small">
            <i class="fas fa-newspaper"></i> {{ results|length }} magazine(s) affiché(s)
        </div>
    </div>
    
    <!-- Grille de magazines -->
    <div class="row">
        {% for magazine in results %}
        <div class="col-6 col-md-4 col-lg-3 col-xl-2 mb-4">
            <div class="card h-100 magazine-card shadow-sm">
                <!-- Image -->
                <div class="magazine-cover-wrapper text-center p-2" style="background: linear-gradient(135deg, #f5f7fa 0%, #e4e8ec 100%);">
                    {% if images[magazine.id] is defined %}
                        <img id='img-{{ magazine.id }}' 
                             class="img-cover img-fluid" 
                             alt="{{ magazine.nom }}" 
                             src="data:image/jpeg;base64,{{ images[magazine.id] }}"
                             style="max-height: 180px; object-fit: contain; cursor: pointer;" />
                    {% else %}
                        <div class="d-flex align-items-center justify-content-center" style="height: 180px;">
                            <i class="fas fa-book-open fa-4x text-muted"></i>
                        </div>
                    {% endif %}
                </div>
                
                <!-- Corps de la card -->
                <div class="card-body p-2">
                    <h6 class="card-title mb-1">
                        <a href="{{ path('magazine_detail', {'id': magazine.id}) }}" class="text-dark text-decoration-none magazine-titre">
                            {{ magazine.nom|length > 40 ? magazine.nom|slice(0, 40) ~ '...' : magazine.nom }}
                        </a>
                    </h6>
                    
                    <!-- Éditeur -->
                    {% if magazine.editeur %}
                    <p class="card-text small text-muted mb-1">
                        <i class="fas fa-building"></i> {{ magazine.editeur|length > 20 ? magazine.editeur|slice(0, 20) ~ '...' : magazine.editeur }}
                    </p>
                    {% endif %}
                    
                    <!-- Statut -->
                    <div class="mb-1">
                        {% if magazine.statut %}
                            <span class="badge badge-success badge-sm">En cours</span>
                        {% else %}
                            <span class="badge badge-secondary badge-sm">Terminé</span>
                        {% endif %}
                    </div>
                </div>
                
                <!-- Footer -->
                <div class="card-footer bg-white border-top-0 p-2 pt-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge badge-primary">{{ magazine.nbnum }} numéros</span>
                        <a href="{{ path('magazine_detail', {'id': magazine.id}) }}" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    
    <!-- Pagination -->
    {% if pagination is defined %}
        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% endif %}
</div>

<!-- The Image Modal -->
<div id="myModal" class="image-modal">
    <span class="image-modal-close">&times;</span>
    <img class="image-modal-content" id="img01">
    <div id="caption"></div>
</div>

<style>
    .magazine-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: 1px solid #e9ecef;
    }
    .magazine-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }
    .magazine-titre:hover {
        color: #667eea !important;
    }
    .magazine-cover-wrapper {
        border-radius: 0.25rem 0.25rem 0 0;
        min-height: 180px;
    }
</style>
