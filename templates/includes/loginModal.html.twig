<!-- Modal de connexion -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true" data-backdrop="true" data-keyboard="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginModalLabel">
                    <i class="fas fa-book-open text-primary mr-2"></i>Connexion
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p class="text-muted text-center mb-4">Accédez à votre bibliothèque</p>
                
                <form id="loginForm" method="post" action="{{ path('app_login') }}">
                    <div class="form-group">
                        <label for="modalInputEmail">Email</label>
                        <input type="email" 
                               name="email" 
                               id="modalInputEmail" 
                               class="form-control" 
                               placeholder="Votre adresse email"
                               required>
                    </div>
                    
                    <div class="form-group">
                        <label for="modalInputPassword">Mot de passe</label>
                        <input type="password" 
                               name="password" 
                               id="modalInputPassword" 
                               class="form-control" 
                               placeholder="Votre mot de passe"
                               required>
                    </div>
                    
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="modalRememberMe" name="_remember_me">
                        <label class="form-check-label" for="modalRememberMe">Se souvenir de moi</label>
                    </div>
                    
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    
                    <button type="submit" class="btn btn-primary btn-block">
                        <i class="fas fa-sign-in-alt mr-2"></i>Se connecter
                    </button>
                </form>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
            </div>
        </div>
    </div>
</div>
