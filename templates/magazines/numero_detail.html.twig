{% extends 'base.html.twig' %}

{% block title %}{{ magazine.nom }} - N°{{ numero.num }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('magazines_list') }}">Magazines</a></li>
            <li class="breadcrumb-item"><a href="{{ path('magazine_detail', {id: magazine.id}) }}">{{ magazine.nom }}</a></li>
            <li class="breadcrumb-item active">N°{{ numero.num }}</li>
        </ol>
    </nav>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <div class="row">
        <div class="col-md-4">
            {% if couvertureImage %}
                <img src="data:image/jpeg;base64,{{ couvertureImage }}" 
                     class="img-fluid rounded shadow" 
                     alt="Couverture N°{{ numero.num }}">
            {% else %}
                <div class="bg-secondary d-flex align-items-center justify-content-center rounded" 
                     style="height: 400px;">
                    <div class="text-center text-white">
                        <i class="fas fa-image fa-4x mb-3"></i>
                        <p>Pas de couverture</p>
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h1>{{ magazine.nom }}</h1>
                    <h2 class="text-muted">Numéro {{ numero.num }}</h2>
                </div>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div>
                        <a href="{{ path('numero_edit', {id: numero.id}) }}" class="btn btn-outline-secondary">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                    </div>
                {% endif %}
            </div>

            <hr>

            <div class="row">
                <div class="col-md-6">
                    <dl>
                        {% if numero.dateParution %}
                            <dt>Date de parution</dt>
                            <dd>{{ numero.dateParution|date('F Y') }}</dd>
                        {% endif %}
                        
                        {% if numero.prix %}
                            <dt>Prix</dt>
                            <dd>
                                {{ numero.prix|number_format(2, ',', ' ') }}
                                {% if numero.monnaie %}
                                    {{ numero.monnaie.symbole }} ({{ numero.monnaie.libelle }})
                                {% else %}
                                    €
                                {% endif %}
                            </dd>
                        {% endif %}
                        
                        {% if numero.EAN %}
                            <dt>Code EAN</dt>
                            <dd>{{ numero.EAN }}</dd>
                        {% endif %}
                    </dl>
                </div>
            </div>

            {% if numero.description %}
                <div class="mt-3">
                    <h5>Résumé</h5>
                    <p>{{ numero.description|nl2br }}</p>
                </div>
            {% endif %}

            <hr>

            <div class="mt-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5>Propriétaires de ce numéro</h5>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a href="{{ path('numero_add_owner', {id: numero.id}) }}" class="btn btn-sm btn-success">
                            <i class="fas fa-user-plus"></i> Ajouter un propriétaire
                        </a>
                    {% endif %}
                </div>
                
                {% if proprietaires|length > 0 %}
                    <ul class="list-group">
                        {% for lien in proprietaires %}
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <strong>{{ lien.user.name }} {{ lien.user.lastname }}</strong>
                                        <small class="text-muted">({{ lien.user.username }})</small>
                                    </div>
                                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                        <button type="button" class="btn btn-sm btn-outline-primary" 
                                                data-toggle="modal" data-target="#editCommentModal{{ lien.id }}">
                                            <i class="fas fa-comment-alt"></i>
                                        </button>
                                    {% endif %}
                                </div>
                                {% if lien.commentaire %}
                                    <div class="mt-2 p-2 bg-light rounded">
                                        <small class="text-muted"><i class="fas fa-comment"></i> {{ lien.commentaire|nl2br }}</small>
                                    </div>
                                {% endif %}
                                
                                <!-- Modal pour éditer le commentaire -->
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                <div class="modal fade" id="editCommentModal{{ lien.id }}" tabindex="-1" role="dialog">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <form action="{{ path('numero_edit_owner_comment', {id: lien.id}) }}" method="post">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Commentaire de {{ lien.user.name }}</h5>
                                                    <button type="button" class="close" data-dismiss="modal">
                                                        <span>&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="form-group">
                                                        <label for="commentaire{{ lien.id }}">Votre commentaire sur ce numéro</label>
                                                        <textarea name="commentaire" id="commentaire{{ lien.id }}" 
                                                                  class="form-control" rows="4"
                                                                  placeholder="État du numéro, notes personnelles...">{{ lien.commentaire }}</textarea>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="text-muted">Aucun propriétaire enregistré pour ce numéro.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
