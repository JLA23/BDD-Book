{% extends 'base.html.twig' %}

{% block title %}BDD-Magazines{% endblock %}

{% block body %}
    <div id="acceuilSite">
        <div class="text-center mb-4">
            <h1 class="display-5 font-weight-bold" style="color: #667eea;">
                <i class="fas fa-newspaper"></i> BDD-Magazines
            </h1>
            <p class="lead text-muted">Base de données de magazines de la famille Lefebvre</p>
        </div>
        
        <div class="card mb-4">
            <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h5 class="mb-0 text-white"><i class="fas fa-search"></i> Rechercher un magazine</h5>
            </div>
            <div class="card-body">
                <form action="{{ path('magazines_search')}}" class="form-horizontal" id="searchForm">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group mb-3">
                                <label for="search" class="font-weight-bold text-dark">Que recherchez-vous ?</label>
                                <div class="input-group input-group-lg">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-white border-right-0"><i class="fas fa-book-open text-primary"></i></span>
                                    </div>
                                    <input class='form-control border-left-0' name='q' placeholder="Nom du magazine ou éditeur..." type="text" id="search" style="border-top-right-radius: 0.3rem !important; border-bottom-right-radius: 0.3rem !important;"/>
                                </div>
                                <small class="form-text text-muted">Recherche par nom de magazine ou éditeur.</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label for="user-select" class="font-weight-bold text-dark">Collection</label>
                                <select class="form-control form-control-lg" name="user" id="user-select">
                                    <option value="0">Toutes</option>
                                    {% if users is defined %}
                                        {% for user in users %}
                                            <option value="{{ user.id }}">{{ user.name }} {{ user.lastName }}</option>
                                        {% endfor %}
                                    {% endif %}
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="text-center">
                        <button id="searchButton" type="submit" class="btn btn-lg text-white px-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="fas fa-search"></i> Rechercher
                        </button>
                    </div>
                </form>
            </div>
        </div>

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="text-center mb-4">
            <a href="{{ path('magazine_new') }}" class="btn btn-success btn-lg">
                <i class="fas fa-plus"></i> Ajouter un magazine
            </a>
        </div>
        {% endif %}

        <div class="row">
            <div class="col-md-6 mb-3">
                <a href="{{ path('magazines_all')}}" class="card h-100 text-decoration-none" style="cursor: pointer;">
                    <div class="card-body text-center py-4">
                        <div class="mb-3">
                            <i class="fas fa-newspaper fa-3x text-primary"></i>
                        </div>
                        <h5 class="card-title text-dark">Tous les magazines</h5>
                        <p class="card-text text-muted small">Parcourir le catalogue complet</p>
                    </div>
                </a>
            </div>
            <div class="col-md-6 mb-3">
                <a href="{{ path('listeUser')}}" class="card h-100 text-decoration-none" style="cursor: pointer;">
                    <div class="card-body text-center py-4">
                        <div class="mb-3">
                            <i class="fas fa-users fa-3x text-success"></i>
                        </div>
                        <h5 class="card-title text-dark">Collections</h5>
                        <p class="card-text text-muted small">Collections par utilisateur</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
