{% extends 'base.html.twig' %}

{% block title %}{% if edit %}Modifier{% else %}Nouveau{% endif %} Numéro - {{ magazine.nom }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('magazines_list') }}">Magazines</a></li>
            <li class="breadcrumb-item"><a href="{{ path('magazine_detail', {id: magazine.id}) }}">{{ magazine.nom }}</a></li>
            {% if edit %}
                <li class="breadcrumb-item"><a href="{{ path('numero_detail', {id: numero.id}) }}">N°{{ numero.num }}</a></li>
                <li class="breadcrumb-item active">Modifier</li>
            {% else %}
                <li class="breadcrumb-item active">Nouveau numéro</li>
            {% endif %}
        </ol>
    </nav>

    <h1>{% if edit %}Modifier le numéro{% else %}Nouveau numéro{% endif %} - {{ magazine.nom }}</h1>

    {{ form_start(form, {'attr': {'class': 'mt-4', 'enctype': 'multipart/form-data'}}) }}
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">Informations du numéro</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                {{ form_row(form.num) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.dateParution) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.EAN) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.prix) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.monnaie) }}
                            </div>
                        </div>
                        {{ form_row(form.description) }}
                        {{ form_row(form.commentaire) }}
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">Couverture</div>
                    <div class="card-body">
                        {% if edit and currentImage is defined and currentImage %}
                            <div class="mb-3 text-center">
                                <img src="data:image/jpeg;base64,{{ currentImage }}" 
                                     class="img-fluid rounded" 
                                     alt="Couverture actuelle"
                                     style="max-height: 200px;">
                                <p class="small text-muted mt-2">Couverture actuelle</p>
                            </div>
                        {% endif %}
                        {{ form_row(form.couvertureFile) }}
                        <small class="text-muted">Formats acceptés : JPEG, PNG, GIF, WEBP. Max 5 Mo.</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> {% if edit %}Enregistrer les modifications{% else %}Ajouter le numéro{% endif %}
            </button>
            <a href="{{ edit ? path('numero_detail', {id: numero.id}) : path('magazine_detail', {id: magazine.id}) }}" class="btn btn-secondary">
                Annuler
            </a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
