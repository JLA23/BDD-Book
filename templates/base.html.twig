<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}BDD-Books{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('index')}}">BDD-Books</a>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <div class="dropdown">
                        <a class="" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown">
                            <i id="circleUser" class="fas fa-user-circle"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="#">Menu Kiosque</a>
                            <hr>
                            <a class="dropdown-item" href="{{ path('app_logout') }}">{{ 'DÃ©connexion' }}</a>
                        </div>
                    </div>
            {% else %}
                <a class="btn btn-outline-primary btn-xs mr-2" href="{{ path('app_login') }}">{{ 'Connexion' }}</a>
            {% endif %}
        </nav>
        {% for message in app.flashes('warning') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div id="bodyContain">
        {% block body %}

        {% endblock %}
        </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
