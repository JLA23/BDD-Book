{% extends 'base.html.twig' %}

{% block title %}Auteurs - BDD-Books{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <!-- En-tête -->
    <div class="card mb-4">
        <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 text-white">
                    <i class="fas fa-pen-fancy"></i> Liste des Auteurs
                </h5>
                <a href="{{ path('index') }}" class="btn btn-light btn-sm">
                    <i class="fas fa-home"></i> Accueil
                </a>
            </div>
        </div>
        <div class="card-body">
            <!-- Barre de recherche -->
            <form action="{{ path('liste_auteurs') }}" method="get" class="mb-3">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-white"><i class="fas fa-search text-muted"></i></span>
                    </div>
                    <input type="text" name="search" class="form-control" placeholder="Rechercher un auteur..." value="{{ searchTerm }}">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">Rechercher</button>
                        {% if searchTerm %}
                            <a href="{{ path('liste_auteurs') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </form>
            
            <!-- Navigation alphabétique -->
            <div class="alphabet-nav mb-3">
                <div class="d-flex flex-wrap justify-content-center">
                    <a href="{{ path('liste_auteurs') }}" class="btn btn-sm m-1 {% if not lettreActive and not searchTerm %}btn-primary{% else %}btn-outline-primary{% endif %}">
                        Tous
                    </a>
                    {% for initiale in initiales %}
                        <a href="{{ path('liste_auteurs', {'lettre': initiale}) }}" 
                           class="btn btn-sm m-1 {% if lettreActive == initiale %}btn-primary{% else %}btn-outline-primary{% endif %}">
                            {{ initiale }}
                        </a>
                    {% endfor %}
                </div>
            </div>
            
            {% if searchTerm %}
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> 
                    Résultats pour "<strong>{{ searchTerm }}</strong>"
                    {% set totalAuteurs = 0 %}
                    {% for initiale, auteurs in auteursGroupes %}
                        {% set totalAuteurs = totalAuteurs + auteurs|length %}
                    {% endfor %}
                    - {{ totalAuteurs }} auteur(s) trouvé(s)
                </div>
            {% endif %}
        </div>
    </div>
    
    <!-- Liste des auteurs par initiale -->
    {% if auteursGroupes|length == 0 %}
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i> Aucun auteur trouvé.
        </div>
    {% else %}
        {% for initiale, auteurs in auteursGroupes %}
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h4 class="mb-0">
                        <span class="badge badge-primary mr-2" style="font-size: 1.5rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">{{ initiale }}</span>
                        <small class="text-muted">{{ auteurs|length }} auteur(s)</small>
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        {% for auteur in auteurs %}
                            <div class="col-md-4 col-lg-3 mb-3">
                                <a href="{{ path('auteur_detail', {'id': auteur.id}) }}" class="card h-100 text-decoration-none auteur-card">
                                    <div class="card-body d-flex align-items-center">
                                        <div class="auteur-avatar mr-3">
                                            <span class="badge badge-secondary" style="font-size: 1.2rem; width: 45px; height: 45px; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                                                {{ auteur.initiale }}
                                            </span>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="card-title mb-1 text-dark">
                                                {{ auteur.nomComplet }}
                                            </h6>
                                            <small class="text-muted">
                                                <i class="fas fa-book"></i> {{ livresParAuteur[auteur.id] ?? 0 }} livre(s)
                                            </small>
                                        </div>
                                        <i class="fas fa-chevron-right text-muted"></i>
                                    </div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>

<style>
    .auteur-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: 1px solid #eee;
    }
    .auteur-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.15);
    }
    .alphabet-nav .btn {
        min-width: 40px;
    }
</style>
{% endblock %}
